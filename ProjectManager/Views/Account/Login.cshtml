@model LoginModel

<h2 class="text-center mt-4">Вход</h2>

<div class="container mt-3">
    <div class="card p-4 shadow-sm">
        <form asp-action="Login" asp-controller="Account" method="post">
            <div class="mb-3">
                <label class="form-label">Email:</label>
                <input type="email" asp-for="Login" class="form-control" placeholder="Введите email" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Пароль:</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль" required />
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" asp-for="RememberMe" class="form-check-input" />
                <label class="form-check-label">Запомнить меня</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Войти</button>
        </form>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>
