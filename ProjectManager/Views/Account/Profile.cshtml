@model ProfileViewModel
@{
    ViewData["Title"] = "Профиль пользователя";
}

<div class="container mt-4">
    <h2>Профиль пользователя</h2>

    <div class="card p-4">
        <h4>@Model.Name</h4>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Текущая группа:</strong> @Model.Company.Name</p>
        <p><strong>Роли:</strong> @(string.Join(", ", Model.Role))</p>

        <a asp-controller="Account" asp-action="EditProfile" class="btn btn-primary mt-3">Обновить данные</a>
        <a asp-controller="Account" asp-action="Logout" class="btn btn-danger mt-3">Выход</a>
    </div>
</div>
